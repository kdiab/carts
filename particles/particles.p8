pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
		particles = {}
		player = {x=63, y=63}
		life = 10
end

function _update()
		for i = 1, 10 do
				part = {
				x=player.x+rnd(15), 
				y=player.y-9+rnd(20), 
				r=1 + rnd(3), 
				c=10,
				l=6
				}
				add(particles, part)
		end
		for p in all(particles) do
				p.l -= .3
				p.y -= 1
				p.r -= .1
				if p.l <= 5 then
					p.c = 9
					p.x += rnd(.5)
				end
				if p.l <= 2 then
						p.c = 8
				end
				if p.l <= 0 then
						del(particles, p)
				end
		end
		if btn(⬆️) then player.y -=4 end
		if btn(⬇️) then player.y +=4 end
		if btn(⬅️) then player.x -=4 end
		if btn(➡️) then player.x +=4 end
end

function _draw()
		cls()
		spr(1,player.x,player.y,2,2)
		for p in all(particles) do
				circfill(p.x,p.y,p.r,p.c)
		end
		
end
