--idle state
--call when state machine switch
function init_idle() 
		idle = {}
		idle.t,idle.f,idle.s = 0,1,12
		idle.sp = {1,33}
end

function idle_animation()
		idle.t=(idle.t+1)%idle.s
	 if (idle.t==0) idle.f=idle.f%#idle.sp+1
end

function draw_idle()
 	spr(idle.sp[idle.f],53,63,2,2)
end
